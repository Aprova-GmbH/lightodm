# EditorConfig for LightODM
# https://editorconfig.org

root = true

# Defaults for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# YAML files
[*.{yml,yaml}]
indent_size = 2

# TOML files
[*.toml]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# reStructuredText files
[*.rst]
indent_size = 3
max_line_length = 120

# JSON files
[*.json]
indent_size = 2

# Makefile
[Makefile]
indent_style = tab
